---
import type { IProject } from "../lib/data";
export type Project = IProject;
const { repo, img, url, title } = Astro.props as IProject;
---

<div class="flex flex-col gap-2">
  <a class="group block h-56 cursor-pointer" target="_blank" href={url}>
    <div
      class="overflow-hidden text-white z-10 relative flex h-full rounded-3xl border-2 border-black bg-[#646664] p-5 transition group-hover:-translate-x-2 group-hover:-translate-y-2 group-hover:shadow-[8px_8px_0_0_#000]"
      style=`background-image: url(/images/projects/${img}); background-size: cover;`
    >
      <div
        class="lg:group-hover:absolute bg-black/50 absolute inset-0 px-5 z-10 h-full"
      >
        <h3
          class="mt-4 text-xl font-bold sm:text-2xl leading-none tracking-tighter"
        >
          {title}
        </h3>
      </div>
    </div>
  </a>
  {
    repo && (
      <a
        class="w-full border border-black rounded-xl text-center py-2"
        target="_blank"
        href={repo}
      >
        source code
      </a>
    )
  }
</div>
