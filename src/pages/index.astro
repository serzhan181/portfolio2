---
import TechBadge from "../components/TechBadge.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
import { technologies, projects } from "../lib/data";

interface TechBadgeProps {
  name: string;
  imgSrc: string;
  altSrc: string;
  link: string;
}
---

<script>
  import { animate } from "motion";
  import { PowerGlitch } from "powerglitch";
  const pfp = document.getElementById("pfp-1") as Element;

  animate(
    pfp,
    { y: [-6, 6] },
    {
      duration: 2,
      direction: "alternate",
      repeat: 100,
      easing: "ease-in-out",
    }
  );

  PowerGlitch.glitch(".glitch", {
    playMode: "always",
    createContainers: true,
    hideOverflow: false,
    timing: {
      duration: 2000,
    },
    glitchTimeSpan: {
      start: 0.5,
      end: 0.7,
    },
    shake: {
      velocity: 15,
      amplitudeX: 0.2,
      amplitudeY: 0.2,
    },
    slice: {
      count: 6,
      velocity: 15,
      minHeight: 0.02,
      maxHeight: 0.15,
      hueRotate: true,
    },
    pulse: false,
  });
</script>

<Layout title="S3rzh | Home" description="Personal website of s3rzh">
  <main>
    <div class="flex flex-col-reverse md:flex-row justify-center items-center">
      <div class="text-white w-[350px] md:w-[450px]">
        <h1 class="font-bold text-3xl md:text-5xl tracking-tight mb-1 glitch">
          S3rzh
        </h1>
        <h2 class="text-lg mt-2 glitch">Frontend Dev</h2>
        <p class="mt-4 text-left">
          Welcome to my little corder in the internet! I am interested in <strong
            >web developement</strong
          >
        </p>
      </div>
      <img
        id="pfp-1"
        class="mb-10 md:mb-0 h-[120px] w-[120px] md:h-[240px] md:w-[240px] rounded-full ml-0 md:ml-10"
        src="https://avatars.githubusercontent.com/u/67381256?s=400&u=c9f7a1a62b007e1d020d2d5fdcbd1d3e9493d917&v=4"
        alt="Paul Valladares"
      />
    </div>
    <div class="flex justify-center items-center my-10 md:my-16">
      <div class="text-white w-[350px] md:w-[740px]">
        <h2 class="text-3xl font-bold">Technologies</h2>
        <p class="mt-4 text-left">
          I like playing around and learning new programming languages,
          frameworks and libraries. These are the technologies that I love
          working with:
        </p>
        <div
          class="grid grid-cols-2 gap-y-5 md:grid-cols-3 md:gap-y-8 md:gap-x-4 mt-10"
        >
          {
            technologies.map((tech: TechBadgeProps) => (
              <a href={tech.link} class="cursor-pointer text-gray-300">
                <TechBadge {...tech} />
              </a>
            ))
          }
        </div>
      </div>
    </div>
    <div class="flex justify-center items-center my-10 md:my-16">
      <div class="text-white w-[350px] md:w-[740px]">
        <h2 class="text-3xl font-bold">Projects</h2>
        <p class="mt-4 text-left">
          I enjoy building projects whether they are small or big, here are few:
        </p>
        <div
          class="grid grid-cols-1 gap-y-5 md:grid-cols-2 md:gap-y-8 md:gap-x-4 mt-10"
        >
          {projects.map((p) => <ProjectCard {...p} />)}
        </div>
      </div>
    </div>
  </main>
</Layout>
